<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="278.0" prefWidth="531.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.examenfx.HelloController">
    <center>
        <BorderPane>
            <center>
                <VBox alignment="CENTER" prefHeight="278.0" prefWidth="384.0" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <Label fx:id="lbtitulo" text="Gestor de Usuarios">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TableView fx:id="tabla" prefHeight="200.0" prefWidth="200.0">
                        <columns>
                            <TableColumn fx:id="clcorreo" prefWidth="75.0" text="Correo" />
                            <TableColumn fx:id="clplataforma" prefWidth="75.0" text="Plataforma" />
                            <TableColumn fx:id="clrol" prefWidth="75.0" text="Rol" />
                            <TableColumn fx:id="clversion" text="Version" />
                     <TableColumn fx:id="clfecha" prefWidth="75.0" text="Fecha Creación" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </center>
        </BorderPane>
    </center>
    <right>
        <VBox alignment="CENTER" prefHeight="278.0" prefWidth="140.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lbañadirusuario" text="Añadir Usuario" textAlignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <Label fx:id="lbcorreo" text="Correo">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
                <TextField fx:id="tfcorreo">
                    <font>
                        <Font size="10.0" />
                    </font>
                </TextField>
                <Label fx:id="lbplataforma" text="Plataforma">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
                <TextField fx:id="tfplataforma">
                    <font>
                        <Font size="10.0" />
                    </font>
                </TextField>
            <Label fx:id="lbversion" text="Versión" />
            <TextField fx:id="tfversion" />
            <CheckBox fx:id="cbadmin" mnemonicParsing="false" text="Admin" />
                <!-- AÑADE LOS onAction A LOS BOTONES -->
                <Button fx:id="btnAñadir" mnemonicParsing="false" onAction="#añadirUsuario" text="Añadir">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin></Button>
                <Button fx:id="btnvaciar" mnemonicParsing="false" onAction="#vaciarTabla" text="Vaciar datos">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin></Button>
            </children>
        </VBox>
    </right>
</BorderPane>
